{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Luvano Prettier Config Schema",
  "type": "object",
  "properties": {
    "trailingComma": { "type": "string" },
    "tabWidth": { "type": "number" },
    "useTabs": { "type": "boolean" },
    "semi": { "type": "boolean" },
    "singleQuote": { "type": "boolean" },
    "plugins": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
